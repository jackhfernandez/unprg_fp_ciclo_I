#include <iostream>

using namespace std;

int main()
{
    cout << "Programa  para mult vector por nro escalar\n" << endl;

    int v1[3], v2[3], v3[3], e;

    for (int i=0; i<3; i++) {
        cout<<"Ingrese los valores para el vector 1: ";
        cin >>v1[i];
    }

    cout<<"\n";

    /*for (int i=0; i<3; i++) {
        cout<<"Ingrese los valores para el vector 2: ";
        cin >>v2[i];
    }*/

    cout<<"Ingrese n: ";
    cin >> e;

    for (int i=0; i<3; i++)
        v3[i] = e*v1[i];

    cout<<"\nMostrando vector resultante\n"<<endl;
    cout<<"\tv3 = [ ";

    for (int i=0; i<3; i++)
        cout<<v3[i]<<" - ";
    cout<<" ]\n\n";

    return 0;
}
